@{
    ViewBag.secTitle = "管理员列表";
    Layout = "~/Views/Shared/_layoutPartal.cshtml";
}
<script src="~/Scripts/Account.js"></script>
<div class="place">
    <span>位置：</span>
    <ul class="placeul">
        <li><a href="/Manager/Index">首页</a></li>
        <li><a href="#">管理员列表</a></li>
    </ul>
</div>

<div class="rightinfo">

    <div class="tools">
        <ul class="toolbar">
            <li><span onclick="addmanager()"><img src="/images/t01.png" /></span>添加管理员</li> 
        </ul>
    </div>
    <table class="tablelist">
        <thead>
            <tr>
                <th><input name="" type="checkbox" value="" /></th>
                <th>编号</th>
                <th>用户名</th>
                <th>邮箱</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.data != null)
            {
                int i = 1; 
                foreach (var item in ViewBag.data)
                {
                    <tr> 
                        <td><input name="" type="checkbox" value=""/></td>
                        <td>@(i++)</td>
                        <td>@item.AdminName</td>
                        <td>@item.Email</td>
                        <td><a href="#" class="tablelink" onclick="editpwd(@item.ID)">修改密码</a> | <a href="#" class="tablelink" onclick="delUser(@item.ID)"> 删除</a>  | <a href="#" class="tablelink" onclick="editUser(@item.ID)"> 编辑</a>
                            | <a class="tablelink" href="RightsAdd/@item.ID"> 添加权限</a>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table> 
        <div class="tip">
            <div class="tiptop"><span>提示信息</span><a></a></div>
            <div class="tipinfo">
                <span><img src="/images/ticon.png" /></span>
                <div class="tipright">
                    <p>是否确认删除信息 ？</p>
                    <cite>如果是请点击确定按钮 ，否则请点取消。</cite>
                </div>
            </div>

            <div class="tipbtn">
                <input name="" type="button" class="sure" value="确定" />&nbsp;
                <input name="" type="button" class="cancel" value="取消" />
            </div>

        </div>




    </div>

    <script type="text/javascript">
        $('.tablelist tbody tr:odd').addClass('odd');
        var id = '@ViewBag.liId';
        $(".menuson").hide();
        $("#" + id).addClass("active");
        $("#" + id).parent().show();
    </script>
