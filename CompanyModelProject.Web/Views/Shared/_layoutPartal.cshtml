<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Frameset//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-frameset.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title ---- @ViewBag.secTitle</title>
    <meta name="keywords" content="@ViewBag.keys" />
    <meta name="description" content="@ViewBag.dec" /> 
    <link href="/Content/style.css" rel="stylesheet" type="text/css" /> 
     <script language="JavaScript" src="/Scripts/jquery.js"></script>
    <script type="text/javascript">
        $(function () {
            //顶部导航切换
            $(".nav li a").click(function () {
                $(".nav li a.selected").removeClass("selected")
                $(this).addClass("selected");
            })
        })
    </script>  
    <style>
        #head {
            min-width: 980px;
            height: 90px;
            background: url(/images/topbg.gif) repeat-x;
        }
       
        #left {
            width: 14%;
            float: left;
            background: #f0f9fd;
            min-width: 187px;
            display:block;
        }
        #right {
            width: 85%;
            float: left;
            display: block;
            height:596px;
            overflow:auto;
            border-left: 1px solid #b7d5df;
        }
    </style>
</head> 
    <body>  
        <div id="head">@Html.Partial("Top")</div>
        <div id="index"> 
            <div id="left">@Html.Partial("left")</div> 
            <div id="right">@RenderBody()</div> 
        </div> 
    </body> 
</html>
   <script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/Account.js"></script>
<script src="~/Scripts/ManagerJs.js"></script>

