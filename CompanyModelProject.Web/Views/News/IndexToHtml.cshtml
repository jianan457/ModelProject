 <div class="place">
    <span>位置：</span>
    <ul class="placeul">
        <li><a href="/Manager/Index">首页</a></li>
        <li><a href="#">首页生成静态页</a></li>
    </ul>
</div>
<div class="rightinfo">
    <div class="tools">
        <ul class="toolbar">
            <li> <a href="/Home/Index" target="_blank">首页预览</a></li>
            <li onclick="creatHTML()">生成首页静态页</li>
            <li> <a href="/Home/Index.html" target="_blank">首页静态页预览</a></li> 
        </ul>
    </div>
    <script>
        $(function () {
            var id = '@ViewBag.liId';
            $(".menuson").hide();
            $("#" + id).addClass("active");
            $("#" + id).parent().show();
        })
        function creatHTML() {
            $.get('/News/CreatHtmlHandler?date=' + new Date(), {}, function (data) {
                if (data.code == 0) {
                    alert(data.message);
                }
                else { alert(data.message); }
            });
        }
    </script>
    </div>
