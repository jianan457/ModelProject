            &nbsp;&nbsp;&nbsp;&nbsp;您的位置：<a href="http://www.zzdxemba.com/">首页</a>>> 新闻动态
        </div>
        <div class="public_right_content">
            <ul class="new_list">
                @if (ViewBag.data != null)
                {
                    int i = 1;
                    foreach (var item in ViewBag.data)
                    { 
                        <li>
                            <div class="new_title">
                                <a href="@item.HtmlUrl"><span style="width:570px">&nbsp;&nbsp;&nbsp;·@(item.Title.Length > 36 ? item.Title.Substring(0, 36) : item.Title)</span><span>@item.CreateTime.ToString("yyyy-MM-dd")</span></a>
                            </div>
                        </li>
                    }
                }
                else
                {
                    <li>
                        @ViewBag.meg
                    </li>
                }
            </ul>

        </div>
        @if (ViewBag.Url != null)
        {
            <div class="button1" style="margin-top:30px; position: relative;">
                <span class="page_box">

                    @if (ViewBag.Url.Count > 0)
                    {
                        List<string> pages = ViewBag.Url;
                        int curent = ViewBag.PageIndex - 1;
                        bool last = curent - 1 >= 0;
                        bool next = curent + 1 < pages.Count;

                        @* 计算页码开始和结束的数字-前后各取10页 *@
                        int total = pages.Count;
                        int begin = curent - 10;
                        int end = begin + 20;
                        <span class="num_k">共 @total 页</span>

                        if (last)
                        {

                            <a href="@pages[curent-1]" class="prev">上一页</a>
                        }
                        else
                        {
                            <a href="javascript:;" class="prev">上一页</a>
                        }

                        if (begin < 0)
                        {
                            if (end - begin < total)
                            {
                                end = end - begin;
                            }
                            begin = 0;
                        }
                        if (end > total)
                        {
                            if (begin - (end - total) >= 0)
                            {
                                begin = begin - (end - total);
                            }
                            end = total;
                        }
                        if (next)
                        {

                            <a href="@pages[curent+1]" class="next">下一页</a>
                        }
                        else
                        {
                            <a href="javascript:;" class="next">下一页</a>

                        }
                        @*<li>  <a href="@pages.Last()">@total</a></li>*@

                    }


                </span>
            </div>
        }
    </div>
